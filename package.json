{
  "name": "forgecloud",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "dev": "./scripts/dev.sh",
    "dev:backend": "yarn workspace @forgecloud/backend dev",
    "build:backend": "yarn workspace @forgecloud/backend build",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "lint": "yarn workspaces foreach -v run lint",
    "lint:fix": "yarn workspaces foreach -v run lint:fix"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  }
}

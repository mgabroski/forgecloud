{
  "name": "forgecloud",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "dev": "./scripts/dev.sh",
    "dev:backend": "yarn workspace @forgecloud/backend dev",
    "build:backend": "yarn workspace @forgecloud/backend build",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "lint": "yarn workspaces foreach -Av run lint",
    "lint:fix": "yarn workspaces foreach -Av run lint:fix"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
